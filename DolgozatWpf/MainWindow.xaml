<Window x:Class="DolgozatWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DolgozatWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGrid" Grid.Row="0"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <Label Content="Név:" Margin="5"/>
            <TextBox x:Name="nev" Width="150" Margin="5"/>
            <Label Content="Életkor:" Margin="5"/>
            <TextBox x:Name="eletkor" Width="150" Margin="5"/>
            <Label Content="Pontszam:" Margin="5"/>
            <TextBox x:Name="pontszam" Width="150" Margin="5"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <Button Content="Hozzáadás" Margin="5" Padding="5" Width="80" Click="hozzaadas"/>
            <Button Content="Mentés" Margin="5" Padding="5" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
